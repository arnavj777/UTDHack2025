# Django Settings
# Copy this file to .env and update the values
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (if using PostgreSQL or other, uncomment and configure)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Frontend Development Server Port (optional)
# FRONTEND_PORT=5173

# Gemini API Key (for Research Chatbot)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# SerpAPI Key (for Google Trends)
# Get your API key from: https://serpapi.com/
SERPAPI_KEY=your-serpapi-key-here

# Sentiment Analysis Weights (optional, defaults shown)
# SENTIMENT_WEIGHT=0.6
# TREND_WEIGHT=0.4

